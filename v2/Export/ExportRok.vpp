File fRok;

var
  sRokPass: string;
  bProceed: boolean;

Window wnPassword 'Пароль';
  show at (,, 55, 6);

Screen scPassword ('',, sci1TnEsc);
  NoTableNavigation;
Fields
  sRokPass: NoProtect, anLeft, anRight;
Buttons
  cmOk, default;
  cmCancel;
<<

   `Пароль`.@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@

    <.  Продолжить  .>   <.    Отмена    .>
>>
End;

End;

WindowEvent wnPassword;

cmInit:
{
  sRokPass := '';
  bProceed := false;
}

cmOk:
{
  bProceed := true;
  CloseWindow(wnPassword);
}

End;

private procedure DoExportRok;
{
  RunWindowModal(wnPassword);
  if (not bProceed)
    exit;

  wlog.LogStartVisual('Запись в файл ' + sResFile, 0);
  fRok.OpenFile(sResFile, stCreate);
  DoSetStream(fRok.Handle, sRokPass);

  mtPeriod.Start;
  _loop backward mtPeriod
    mtPeriod.Save;
  mtPeriod.Stop;

  ResetBounds(#mtDepart);
  mtDepart.Start;
  _loop mtDepart
    mtDepart.Save;
  mtDepart.Stop;
  SetBounds(#mtDepart);

  mtDepHist.Start;
  _loop mtDepHist
    mtDepHist.Save;
  mtDepHist.Stop;

  ResetBounds(#mtPost);
  mtPost.Start;
  _loop mtPost
    mtPost.Save;
  mtPost.Stop;
  SetBounds(#mtPost);

  mtPayTitle.Start;
  _loop mtPayTitle
    mtPayTitle.Save;
  mtPayTitle.Stop;

  mtPerson.Start;
  _loop mtPerson
  {
    if not NextVisual
      _raise exUserBreaked;

    mtPerson.Save;

    mtFioHist.Start;
    _loop mtFioHist where (( mtPerson.Id == mtFioHist.Person ))
      mtFioHist.Save;
    mtFioHist.Stop;

    mtChild.Start;
    _loop mtChild where (( mtPerson.Id == mtChild.Person ))
      mtChild.Save;
    mtChild.Stop;

    mtAppoint.Start;
    _loop mtAppoint where (( mtPerson.Id == mtAppoint.Person ))
      mtAppoint.Save;
    mtAppoint.Stop;

    mtEducation.Start;
    _loop mtEducation where (( mtPerson.Id == mtEducation.Person ))
      mtEducation.Save;
    mtEducation.Stop;

    mtPersPer.Start;
    _loop mtPersPer where (( mtPerson.Id == mtPersPer.Person ))
    {
      if not NextVisual
        _raise exUserBreaked;

      mtPersPer.Save;

      mtNachisl.Start;
      _loop mtNachisl where (( mtPersPer.Person == mtNachisl.Person and
                               mtPersPer.Period == mtNachisl.Period ))
        mtNachisl.Save;
      mtNachisl.Stop;

      mtPayment.Start;
      _loop mtPayment where (( mtPersPer.Person == mtPayment.Person and
                               mtPersPer.Period == mtPayment.Period ))
        mtPayment.Save;
      mtPayment.Stop;
    }
    mtPersPer.Stop;
  }
  mtPerson.Stop;

  fRok.Close;
  wlog.LogStopVisual;
}
