End;

TableEvent
  table mtPersPer;

cmInsertRecord:
  insert current mtPersPer;

cmUpdateRecord:
  update current mtPersPer;

cmDeleteRecord:
  if isValid(#mtPersPer)
    if (GetFirst mtNachisl = tsOk)
      message('Удаление расчетного периода невозможно, так как есть начисления.');
    else
      if (GetFirst mtPayment = tsOk)
        message('Удаление расчетного периода невозможно, так как есть выплаты.');
      else
        delete current mtPersPer;

end;
